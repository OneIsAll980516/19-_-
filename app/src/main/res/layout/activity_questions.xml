<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/taskBackground">
    <TextView
        android:id="@+id/subtask_progress"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center" />
        <FrameLayout
            android:id="@+id/media_frame"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center">


            <com.oneisall.DoTasks.Adapters.MyJzvdStd
                android:id="@+id/videoplayer"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/img_subtask"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp" />

        </FrameLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/qa_recyle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/taskBackground">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
    <com.michaldrabik.tapbarmenulib.TapBarMenu
        android:id="@+id/tapBarMenu"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:tbm_buttonPosition = "right"
        app:tbm_backgroundColor="#135695"
        >

        <ImageView
            android:id="@+id/give_up"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@mipmap/give_up"
            />


        <ImageView
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@mipmap/submit"
            />

        <Space
            android:layout_width="50dp"
            android:layout_height="match_parent"
            />
    </com.michaldrabik.tapbarmenulib.TapBarMenu>
</RelativeLayout>