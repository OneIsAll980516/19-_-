<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.oneisall">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/oneisall_icon_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:appComponentFactory"
        android:appComponentFactory="任意字符">
        <activity
            android:name=".views.HomeActivity"
            android:label="@string/title_activity_home" />
        <activity
            android:name=".views.LoginActivity"
            android:label="@string/app_name"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".tasks.DoTaskActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".tasks.CheckTaskActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".tasks.TaskDetailActivity"
            android:theme="@style/Theme.Swipe.Back"/>
        <activity
            android:name=".views.SearchActivity"
            android:theme="@style/Theme.Swipe.Back"/>
        <activity
            android:name=".views.TaskDisplayActivity"
            android:theme="@style/Theme.Swipe.Back"/>
    </application>

</manifest>